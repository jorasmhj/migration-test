{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,
    "target": "ES6",
    "allowJs": true,
    "lib": ["es6"],
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}
